doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Lista de Productos
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x' crossorigin='anonymous')

body
    .container.p-4
        .row.offset-md-3
            .col-md-6
                h1 Lista de Productos
            .col-md-6
                a.btn.btn-primary(href='http://localhost:8080/') Cargar Productos
        .row.mt-5
            if productsExists
                table.table.table-dark
                    thead
                        tr
                        th(scope='col') Producto
                        th(scope='col') Precio
                        th(scope='col') Imagen
                    tbody
                        each item in items
                            tr
                            td(scope='col align-middle')= item.title
                            td(scope='col')= item.price
                            td(scope='col') 
                                img(src=item.thumbnail alt=item.title height='50px')
            else
                .alert.alert-warning(role='alert')
                    h3 No hay productos guardados

    script(src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js' integrity='sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js' integrity='sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT' crossorigin='anonymous')

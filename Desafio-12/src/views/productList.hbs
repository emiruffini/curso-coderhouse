<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

<div class="container p-4">
        <div class="row offset-md-3">
            <div class="col-md-6">
                <h1>Lista de Productos</h1>
            </div>
            <div class="col-md-6">
                <button onclick="location.href = '/'" class="btn btn-primary">Cargar Productos</button>
            </div>
        </div>
        <div class="row mt-5">
            {{#if productsExists}}
                <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">Producto</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Imagen</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each items}}
                        <tr>
                            <td scope="col align-middle">{{this.title}}</td>
                            <td scope="col">{{this.price}}</td>
                            <td scope="col"><img src="{{this.thumbnail}}" alt="{{this.title}}" height="50px"></td>
                        </tr>
                    {{/each}}
                </tbody>
            {{else}}
                <div class="alert alert-warning" role="alert">
                    <h3>No hay productos guardados</h3>
                </div>
            {{/if}}
        </table>
        </div>
        
    </div>